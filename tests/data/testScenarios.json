{
  "testScenarios": [
    {
      "id": "web_app_implement_auth",
      "name": "Web Application - Verify Implement User Authentication in To Do",
      "url": "${DEMO_APP_URL}",
      "tags": ["smoke", "regression", "auth"],
      "steps": [
        {
          "action": "fill",
          "selector": "#username",
          "value": "${DEMO_APP_EMAIL}"
        },
        {
          "action": "fill",
          "selector": "#password",
          "value": "${DEMO_APP_PASSWORD}"
        },
        {
          "action": "click",
          "selector": "button[type='submit']"
        },
        {
          "action": "click",
          "selector": "a:has-text('Web Application'), button:has-text('Web Application'), div:has-text('Web Application')",
          "skipIfHasClass": "bg-gray-700"
        }
      ],
      "expectations": [
        {
          "type": "visible",
          "selector": "div.flex:has(h2:has-text('To Do')) .bg-white.p-4:has-text('Implement user authentication')"
        },
        {
          "type": "text",
          "selector": "div.flex.flex-col.w-80.bg-gray-50.rounded-lg.p-4:has(h2:has-text('To Do')) div:has-text('Implement user authentication') .rounded-full",
          "value": "Feature"
        },
        {
          "type": "text",
          "selector": "div.flex.flex-col.w-80.bg-gray-50.rounded-lg.p-4:has(h2:has-text('To Do')) div:has-text('Implement user authentication') .rounded-full",
          "value": "High Priority"
        }
      ]
    },
